<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alto_card1"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/margen"
    android:layout_marginLeft="@dimen/margen"
    android:layout_marginRight="@dimen/margen"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margen_peq"
        android:background="@drawable/card1">
        <ImageView
            android:id="@+id/tense_card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alto_imagecard1"
            android:layout_marginTop="@dimen/margen_peq"
            android:src="@drawable/est_present_simple" />
        <TextView
            android:id="@+id/tense_card_title"
            android:layout_below="@+id/tense_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margen_gran"
            android:gravity="left"
            android:text="@string/word_tense"
            android:textColor="@color/white"
            android:textSize="@dimen/titulo_card_med" />

        <ImageButton
            android:id="@+id/tense_boton_detalle"
            android:layout_width="@dimen/boton_peq"
            android:layout_height="@dimen/boton_peq"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/margen_neg"
            android:background="@color/white"
            android:src="@drawable/ic_detail"
            android:layout_alignBottom="@+id/tense_card_title"
            android:layout_alignParentRight="true"
            android:tint="@color/medium_grey"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>